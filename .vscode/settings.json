{
  // VSCode
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.rulers": [120],
  "javascript.validate.enable": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html",
    "razor": "html",
    "plaintext": "jade"
  },
  "prettier.parser": "flow",
  "editor.foldingStrategy": "indentation",
  // Enable per-language
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "cSpell.words": ["Formik"]
}
